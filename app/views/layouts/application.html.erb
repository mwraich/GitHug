<!DOCTYPE html>
<html>
<head>
  <title>GitHug</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <li><%= link_to 'Login with Github', auth_at_provider_path(provider: :github) %></li>
  <% if current_user %>
    <li><%= link_to 'Logout', session_path(current_user), method: 'delete' %></li>
  <% end %>

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p> <%= flash[:alert] %></p>
  <% end %>

<%= yield %>

</body>
</html>
