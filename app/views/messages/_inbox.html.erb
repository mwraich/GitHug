<h3>Inbox</h3>

<% if @profile.recipient_messages.any?%>
  <% @profile.recipient_messages.each do |msg| %>
    <div class="form_update">
    <%= form_for @message do |f|%>
      <%= f.label :read_status, "Read" %>
      <%= f.check_box(:read_status, value: false, class: 'unread') %>
      <% f.submit "SEND" %>
    <% end %>
    </div>
  <div class="message">
    <p>To:<span class="recipient_id"><%= msg.recipient.first_name %></span></p>

    <p>Subject:<span class="subject_line"><%= msg.subject_line %></span></p>
    <p>Sent By: <span class="sender_id"><%= msg.sender.id %></p>
    <%= msg.message %>

      <%= link_to "Reply", new_message_path, class: 'reply' %>
      <%= render "reply" %>
    </div>

  <% end %>
<% end %>
