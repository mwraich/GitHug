

<h3>Send <%= @profile.first_name %> a message:</h3>
<div class="new_message">
  <%= form_for @message do |f| %>

    <%= f.label :subject_line, "Subject" %>
    <%= f.text_field :subject_line %>

    <%= f.label :message, "New Message" %>
    <%= f.text_area :message %>

    <%= f.hidden_field :recipient_id, value: @profile.id %>

    <%= f.submit "SEND" %>
  <% end %>
</div>
