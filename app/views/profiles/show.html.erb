
<h1>Profile Page</h1>


<h1><%= @profile.first_name %> <%= @profile.last_name %></h1>

<div>
  <p> <%= @profile.about_me %></p>
</div>

<h3>My Details</h3>
<ul>
  <li> Gender:
    <% if @profile.male == true %>
    Male
    <% elsif @profile.female == true %>
    Female
    <% else %>
    Other
    <% end %>
  </li>
  <li>
    Location: <%= @profile.location %>
  </li>
  <li>
    Birthday: <%= @profile.birthday %>
  </li>
  <li>
    Operating System: <%= @profile.operating_system %>
  </li>
</ul>

<h3> Languages </h3>

<ul>
  <% @profile.languages.each do |lang| %>
    <li> <%= lang.language %> Skill Level: <%= lang.skill_level %></li>
  <% end %>
</ul>

<% @profile.tags.any? %>
<% @profile.tags.each do |tag| %>
  <%= link_to tag.name, tagged_url(:tag => tag.name) %>
<% end %>

<% @profile.images.each do |img| %>
  <%= image_tag(img.image)%>
<% end %>


  <%= form_for @message do |f| %>
    <%= f.label :message, "Message" %>
    <%= f.text_area :message %>
    <%= f.hidden_field :recipient_id, value: @profile.id %>
    <%= f.submit "SEND" %>
<% end %>

<% @profile.recipient_messages.each do |message| %>
  <div class="message">
    <p>To: <%= message.recipient.first_name %> </p>
    <p>Sent By: <%= message.sender.first_name %></p>
    <%= message.message %>
    <%= link_to "Reply", new_message_path%>
  </div>
<% end %>
