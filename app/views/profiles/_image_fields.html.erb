<div class="nested-fields">

  <div class="image-fields">
    <%= image_tag f.object.image_url(:thumb) if f.object.image_url.present? %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="add-language-spacing">
    <%= link_to_remove_association 'Remove Image', f, id: 'remove_photo' %>
  </div>

</div>
