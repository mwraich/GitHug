<div class="nested-fields">
    <div class="language-fields-radio">
    <%= f.label(:language, 'What are your preferred languages?') %><br>

      <%= f.label(:language, 'Ruby',  class: 'button-label') %>
      <%= f.radio_button(:language, 'Ruby') %>

      <%= f.label(:language,'JavaScript',  class: 'button-label') %>
      <%= f.radio_button(:language, 'JavaScript') %>

      <%= f.label(:language, 'Python',  class: 'button-label') %>
      <%= f.radio_button(:language, 'Python') %>

      <%= f.label(:language,'Java',  class: 'button-label') %>
      <%= f.radio_button(:language, 'Java') %>

      <%= f.label(:language,'PHP',  class: 'button-label') %>
      <%= f.radio_button(:language, 'PHP') %>

      <%= f.label(:language,'C++',  class: 'button-label') %>
      <%= f.radio_button(:language, 'C++') %><br><br>

  </div>

  <div class="language-fields-radio">
    <%= f.label :skill_level, "Skill Level:", class: "skill-level" %><br>

    <%= f.label(:skill_level, "Newbie", class: "language-fields-label") %>
    <%= f.radio_button(:skill_level, 1) %>


    <%= f.label(:skill_level, "Beginner", class: "language-fields-label") %>
    <%= f.radio_button(:skill_level, 2) %>

    <%= f.label(:skill_level, "Intermediate", class: "language-fields-label") %>
    <%= f.radio_button(:skill_level, 3) %>

    <%= f.label(:skill_level, "Advanced", class: "language-fields-label") %>
    <%= f.radio_button(:skill_level, 4) %>

    <%= f.label(:skill_level, "Expert", class: "language-fields-label") %>
    <%= f.radio_button(:skill_level, 5) %>

  </div>

  <div class="add-language-spacing">
    <br>
    <%= link_to_remove_association 'Remove', f, id: 'remove_language' %>
    <br>
  </div>


</div>
