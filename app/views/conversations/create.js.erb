<% if @message.errors.present? %>
  $('.message_error_messages').html('<%=j render "messages/messages_form_errors" %>');
  $('.message_error_reply').html('<%=j render "messages/messages_form_errors" %>');
<% else %>
  $('.new_message').val('');
  $('.message_error_messages').html('');
  $('.new_message_pop_up_expanded').slideToggle();
  $('.reply_message_message').val('');
  $('.chat-message-content').slideToggle();
<% end %>
